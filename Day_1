https://leetcode.com/problems/remove-outermost-parentheses/


class Solution {

    public String removeOuterParentheses(String s) {

        StringBuilder sb = new StringBuilder();
        int depth = 0;

        for (char ch : s.toCharArray()) {   // âœ… NOW valid
            if (ch == '(') {
                if (depth > 0) {
                    sb.append(ch);
                }
                depth++;
            } else {
                depth--;
                if (depth > 0) {
                    sb.append(ch);
                }
            }
        }
        return sb.toString();
    }
}
